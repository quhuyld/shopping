<!DOCTYPE html>
<html>
<head></head>
<body>
    <a href="/admin/pro">Product</a>
    <a href="/admin/cat">Category</a>
    <a href="/admin/user">User</a>
    <a href="/admin/order">Order</a>
    <a href="/admin/logout">Logout</a>
    <h2>Orders</h2>
    <table style="width:100%; border : 1">
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Address</th>
            <th>Total</th>
        </tr>
        <%orders.forEach(order=>{%>
            <tr style="text-align: center;">
                <td><a href="/admin/order-details?id=<%=order.id%>">
                    <%=order.id%>
                </a></td>
                <td><%=order.date%></td>
                <td><%=order.customer.fullname%></td>
                <td><%=order.customer.address%></td>
                <td><%=order.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.')%></td>
            </tr>    
        <%})%>
    </table>
</body>

</html>