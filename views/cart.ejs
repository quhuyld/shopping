<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shopping Cart</h2>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End Page title area -->


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
            </div>

            <div class="col-md-8">
                <div class="product-content-right">
                    <div class="woocommerce">
                        <table cellspacing="0" class="shop_table cart">
                            <thead>
                                <%if(locals.message){%>
                                    <div class="alert-success"><%=message%></div>    
                                <%}%>
                                <tr>
                                    <th class="product-remove">&nbsp;</th>
                                    <th class="product-thumbnail">&nbsp;</th>
                                    <th class="product-name">Product</th>
                                    <th class="product-price">Price</th>
                                    <th class="product-quantity">Quantity</th>
                                    <th class="product-subtotal">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%if(locals.cart){%>
                                    <%if(cart.list.length>0){%>
                                        <%cart.list.forEach(item=>{%>
                                            <tr class="cart_item">
                                                <td class="product-remove">
                                                    <a title="Remove this item" class="remove"
                                                        href="remove-cart-item?index=<%=cart.list.indexOf(item)%>">Ã—</a>
                                                </td>
        
                                                <td class="product-thumbnail">
                                                    <a href="single-product.html"><img width="145" height="145"
                                                            alt="poster_1_up" class="shop_thumbnail"
                                                            src="<%=item.product.image%>"></a>
                                                </td>
        
                                                <td class="product-name">
                                                    <a href="/product-detail?id=<%=item.product._id%>">
                                                        <%=item.product.name%>
                                                    </a>
                                                </td>
        
                                                <td class="product-price">
                                                    <span class="amount">
                                                        <%=(item.product.price*((100-item.product.discount)
                                                            /100)).toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.' )%> VND
                                                    </span>
                                                </td>
        
                                                <td class="product-quantity">
                                                    <div class="quantity buttons_added">
                                                        <%=item.qty%>
                                                    </div>
                                                </td>
        
                                                <td class="product-subtotal">
                                                    <span class="amount">
                                                        <%=(item.product.price*((100-item.product.discount)
                                                            /100)*item.qty).toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.' )%>
                                                            VND%>
                                                    </span>
                                                </td>
                                            </tr>
                                            <%})%>
                                                <%if(locals.cart){%>
                                                    <%if(cart.list.length>0){%>
                                                        <tr>
                                                            <td class="actions" colspan="6">
                                                                <a href="/checkout">
                                                                    <input type="button" value="Checkout" name="proceed"
                                                                    class="btn btn-primary">
                                                                </a>
                                                            </td>
                                                        </tr>    
                                                    <%}%>
                                                <%}%>
                                    <%}%>    
                                <%}%>
                            </tbody>
                        </table>

                        <div class="cart-collaterals">


                            <div class="cart_totals ">
                                <h2>Cart Totals</h2>

                                <table cellspacing="0">
                                    <tbody>
                                        <tr class="cart-subtotal">
                                            <th>Cart Subtotal</th>
                                            <td><span class="amount">
                                                <%if(locals.cart){%>
                                                    <%=cart.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.' )%>
                                                    VND%>
                                                <%}%>
                                            </span></td>
                                        </tr>

                                        <tr class="shipping">
                                            <th>Shipping and Handling</th>
                                            <td>Free Shipping</td>
                                        </tr>

                                        <tr class="order-total">
                                            <th>Order Total</th>
                                            <td><strong><span class="amount">
                                                <%if(locals.cart){%>
                                                    <%=cart.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.' )%>
                                                    VND%>
                                                <%}%>
                                            </span></strong> </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>